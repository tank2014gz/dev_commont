<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yly.kind.commonutils_library">

    <!-- 写入扩展存储，向扩展卡写入数据，用于写入离线定位数据 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".demoActivity.HelloJniActivity" />
        <activity
            android:name=".demoActivity.RecyclerViewFullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_recycler_view_fullscreen"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".demoActivity.RecyclerViewHeaderAndFooterActivity"
            android:label="@string/title_activity_recycler_view_header_and_footer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".demoActivity.RecyclerViewDecorationActivity"
            android:label="@string/title_activity_recycler_view_decoration"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".demoActivity.RecyclerRefreshAndLoadMoreActivity"
            android:label="@string/title_activity_recycler_refresh_and_load_more"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".demoActivity.DownloadActivity"
            android:label="@string/title_activity_download"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".demoActivity.LoadMoreRecyclerViewActivity"
            android:label="@string/title_activity_download"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".demoActivity.NewsFontSizeSettingActivity"
            android:label="@string/title_activity_news_font_size_setting"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".demoActivity.ShareMenuActivity"
            android:label="@string/title_activity_share_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".demoActivity.LoadMoreRecyclerViewActivity1"
            android:label="@string/title_activity_load_more_recycler_view1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".demoActivity.RippleActivity"
            android:label="@string/title_activity_ripple"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>